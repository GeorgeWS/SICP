(A 2 3)
(A 1 (A 2 2))
(A 1 (A 1 (A 2 1)))
(A 1 (A 1 2))
(A 1 4) ;; (A 1 2) = g(2) = 2^2 = 4
16 ;; (A 1 4) = g(4) = 2^4 = 16
;; h(3) = 2^^3 = 2^2^2 = 16

