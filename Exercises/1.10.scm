;; Mathematical expression:
;; f(n) = 2n

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

;; Procedure:
(define (g n) (A 1 n))

;; Evaluation:
(g n)
(A 1 n)
;; expand like so (n - 1) times:
(A 0 (A 1 (- n 1)))
(A 0 (A 0 (A 1 (- (- n 1) 1))))
(A 0 (A 0 (A 0 (A 1 (- (- (- n 1) 1) 1)))))
;; …etc.
;; after expanding (n - 1) times, expression will be (A 1 1) preceeded by (n - 1) copies of "(A 0 ":
…(A 0 (A 0 (A 0 (A 1 1))))
;; reduce like so (n - 1) times:
…(A 0 (A 0 (A 0 2)))
…(A 0 (A 0 4))
…(A 0 8)
;; …etc.
;; the final answer will be 2^n

;; Mathematical expression:
;; g(n) = 2^n

;; Example:
(g 3)
(A 1 3)
(A 0 (A 1 2))
(A 0 (A 0 (A 1 1)))
(A 0 (A 0 2))
(A 0 4)
8
;; g(3) = 2^3 = 8

